<div class="w-screen flex flex-col items-center justify-center">
  <div class="lg:w-2/3 w-full flex lg:flex-row flex-col gap-x-5 lg:items-start items-center justify-center">
    <div class="lg:w-1/3">
      <img src=<%= @album.img_url%>>
      <h1 class="text-2xl font-bold"> <%= @album.title%> (<%=@album.year%>)</h1>
      <h5 class="text-xl text-gray-500"><%= @album.artist%></h5>
      <p class="text-l"><%=@album.description%> </p>
      <div class="mt-5">
        <%= button_to "Edit", edit_album_path(@album.id), {method: :get, class: "w-full text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"} %>
        <%= button_to "Return", "/", {method: :get, class: "w-full text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"} %>
        <%= button_to "Delete", delete_album_path(@album.id), {method: :delete, class: "text-white text-sm bg-red-700 hover:bg-red-800 w-full focus:ring-4 focus:ring-red-300 font-medium rounded-lg px-5 py-2.5 mr-2 mb-2"} %>
      </div>
    </div>
    <div class="w-2/3 lg:mb-0 lg:mt-0 mt-5 mb-20">
      <h1 class="text-4xl font-bold lg:text-left text-center"> Songs</h1>
      <div class = "overflow-y-auto mt-5 w-full">
        <ul class="list-none text-center lg:text-left flex w-full flex-col">
          <% @album.songs.each do |song|%>
            <li class="flex justify-between px-2 w-full">
              <p class="text-2xl pb-1"><%=song%></p>
              <p class="text-2xl pb-1"><%=@album.artist%></p>
            </li>
            <hr class="w-full pb-2 lg:pb-3 " />
          <%end%>
        </ul>
      </div>
    </div>
  </div>
</div>
